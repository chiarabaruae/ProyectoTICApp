<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:onClick="onClick">

    <RelativeLayout
        android:id="@+id/seccProg"
        android:layout_width="420dp"
        android:layout_height="60dp"
        android:background="@color/black">
        <RelativeLayout
            android:layout_width="420dp"
            android:layout_height="57dp"
            android:background="@color/white">

            <TextView
                android:id="@+id/txtProgramadas"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#9DA993"
                android:padding="18dp"
                android:text="Programadas"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold"></TextView>

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/SeccObjAtr"
        android:layout_width="420dp"
        android:layout_height="30dp"
        android:layout_below="@+id/seccProg"
        android:layout_marginEnd="2dp"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:text="Objetivos Atrasados"
            android:textStyle="bold">

        </TextView>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/SeccEspObjAtr"
        android:layout_width="420dp"
        android:layout_height="150dp"
        android:layout_below="@+id/SeccObjAtr"
        android:background="#E3E8E9">

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </ListView>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/SeccObjHoy"
        android:layout_width="420dp"
        android:layout_height="30dp"
        android:layout_below="@+id/SeccEspObjAtr"
        android:layout_marginEnd="2dp"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:text="Objetivos de Hoy"
            android:textStyle="bold">

        </TextView>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/SeccEspObjHoy"
        android:layout_width="420dp"
        android:layout_height="150dp"
        android:layout_below="@+id/SeccObjHoy"
        android:background="#E3E8E9">

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </ListView>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/SeccObjManana"
        android:layout_width="420dp"
        android:layout_height="30dp"
        android:layout_below="@+id/SeccEspObjHoy"
        android:layout_marginEnd="2dp"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:text="Objetivos para MaÃ±ana"
            android:textStyle="bold">

        </TextView>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/SeccEspObjManana"
        android:layout_width="420dp"
        android:layout_height="150dp"
        android:layout_below="@+id/SeccObjManana"
        android:background="#E3E8E9">

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></ListView>

    </RelativeLayout>

    <Button
        android:id="@+id/BtnAgTarea"
        android:name=".MainActivity"
        android:layout_width="140dp"
        android:layout_height="60dp"
        android:layout_below="@id/SeccEspObjManana"
        android:layout_alignEnd="@id/SeccObjManana"
        android:layout_marginTop="5dp"
        android:onClick="onViewAllButtonClicked"
        android:text="Agregar Nueva Tarea"></Button>

</RelativeLayout>